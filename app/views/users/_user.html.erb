<div id="<%= dom_id user %>">
  <p>
    <strong>Id:</strong>
    <%= user.id %>
  </p>

  <p>
    <strong>First name:</strong>
    <%= highlight(user.first_name, params.dig(:q, :first_name_or_last_name_or_email_cont)) %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= highlight(user.last_name, params.dig(:q, :first_name_or_last_name_or_email_cont)) %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= highlight(user.email, params.dig(:q, :first_name_or_last_name_or_email_cont)) %>
  </p>

</div>
